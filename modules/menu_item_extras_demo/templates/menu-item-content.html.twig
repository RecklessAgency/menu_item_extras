{#
/**
 * @file
 * Default theme implementation to present a menu link entity entity.
 *
 * Available variables:
 * - menu_link_content: Menu link entity.
 *
 * @see template_preprocess_menu_link_content()
 *
 * @ingroup themeable
 */
#}


<ul class="menu-extras menu-level-{{ elements|first.menu_level }}">
{% for key, item in elements if key|first != '#' %}
  {% set classes = [
    'menu-item',
    item.is_expanded ? 'menu-item--expanded',
    item.is_collapsed ? 'menu-item--collapsed',
    item.in_active_trail ? 'menu-item--active-trail',
  ] %}

  <li{{ item.attributes.addClass(classes) }}>

    {% set rendered_content = item.content|without('link') %}

    {{ item.content.link }}

    {% if rendered_content %}
      <div class="menu-dropdown menu-dropdown-{{ item.menu_level }}">
        {{ rendered_content }}
      </div>
    {% endif %}

  </li>
{% endfor %}
</ul>

